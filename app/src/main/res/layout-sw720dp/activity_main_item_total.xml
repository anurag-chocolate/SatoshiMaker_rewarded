<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1.0">
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <com.github.snowdream.android.widget.SmartImageView
            android:id="@+id/imagen1"
            android:layout_width="200dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="50dp"
                android:textColor="@color/SatoshiMakerDarkColorActivo"
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username: Admin" />
            <TextView
                android:textSize="0dp"
                android:textColor="@color/SatoshiMakerDarkColorActivo"
                android:id="@+id/fecha2"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 2016-12-07 13:00:00"
                android:textAlignment="center" />
            <TextView
                android:textSize="40dp"
                android:textColor="@color/SatoshiMakerDarkColorActivo"
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: 10000 Satoshi" />
            <TextView
                android:textSize="40dp"
                android:textColor="@color/SatoshiMakerDarkColorActivo"
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 2016-11-19 07:20:27" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
