<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1.0">
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/topreferidoid"
                android:textColor="@color/SatoshiMakerDarkColorActivo"
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />
            <TextView
                android:textSize="@dimen/topreferidouser"
                android:textColor="@color/SatoshiMakerDarkColorActivo"
                android:id="@+id/numerrefer"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:layout_alignBaseline="@+id/username"
                android:layout_alignBottom="@+id/username"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:textSize="@dimen/topreferidouser"
                android:textColor="@color/SatoshiMakerDarkColorActivo"
                android:id="@+id/username"
                android:paddingLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:layout_toRightOf="@+id/id"
                android:layout_alignBaseline="@+id/id"
                android:layout_alignBottom="@+id/id"
                android:textAlignment="center"
                android:layout_toEndOf="@+id/id" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
