<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="17sp"
        android:textColor="#99cc00"
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collection Of Consent Request"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_alignParentStart="true" />
    <TextView
        android:textSize="14sp"
        android:textColor="#99cc00"
        android:id="@+id/textView9"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:text="According to the new regulations of the European Union they require that we obtain your consent to use our platform. We use your data to show you the most relevant offers, for the prevention of fraud, to send payments and for the declaration of taxes. BadWolf will not sell your personal information." />
    <TextView
        android:textSize="14sp"
        android:textColor="#99cc00"
        android:id="@+id/textView10"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:text="For more information, see our help page and FAQ." />
    <TextView
        android:textSize="14sp"
        android:textColor="#99cc00"
        android:id="@+id/textView11"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:text="By giving your consent you accept the following information:" />
    <TextView
        android:textSize="14sp"
        android:textColor="#99cc00"
        android:id="@+id/textView12"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:text="@string/PrivacyPolicynotification" />
    <TextView
        android:textSize="14sp"
        android:textColor="#99cc00"
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:text="@string/Termsofusenotification" />
    <TextView
        android:textSize="14sp"
        android:textColor="#99cc00"
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:text="*I am over 16 years old" />
    <Button
        android:textSize="14sp"
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consent"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:textSize="14sp"
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No consent"
        android:layout_below="@+id/textView14"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
