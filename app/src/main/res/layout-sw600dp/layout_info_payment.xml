<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="40sp"
        android:textStyle="bold"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="@string/infopaymenttitle" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:id="@+id/line1">
        <TextView
            android:textSize="34sp"
            android:id="@+id/ammount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infopaymentSatoshis" />
        <TextView
            android:textSize="34sp"
            android:textStyle="bold"
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ggg"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:id="@+id/line2">
        <TextView
            android:textSize="34sp"
            android:id="@+id/requested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infopaymentpedido" />
        <TextView
            android:textSize="34sp"
            android:textStyle="bold"
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ggg"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:id="@+id/line3">
        <TextView
            android:textSize="34sp"
            android:id="@+id/sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infopaymentenviado"/>
        <TextView
            android:textSize="34sp"
            android:textStyle="bold"
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ggg"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />
    </LinearLayout>

    <TextView
        android:textSize="34sp"
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/infopaymentinfo"
        android:layout_below="@+id/line3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
