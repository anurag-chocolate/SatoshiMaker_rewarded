<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.snowdream.android.widget.SmartImageView
            android:id="@+id/imagen1"
            android:layout_width="82dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username: Admin"
                android:textColor="@color/SatoshiMakerDarkColorActivo"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/fecha2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Date: 2016-12-07 13:00:00"
                android:textAlignment="center"
                android:textColor="@color/SatoshiMakerDarkColorActivo"
                android:textSize="0dp" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: 10000 Satoshi"
                android:textColor="@color/SatoshiMakerDarkColorActivo"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 2016-11-19 07:20:27"
                android:textColor="@color/SatoshiMakerDarkColorActivo"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
